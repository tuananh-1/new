<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/special/edit/{{toy._id}}" method="post">
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Name</label>
         <input class="form-control" type="text" name="name" required maxlength="30" value="{{ toy.name }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" required  value="{{ toy.price }}">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label><br>
            <img src="{{ toy.img }}" width="100" height="150">
            <input class="form-control" type="text" name="img" 
            required value="{{ toy.img }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
   </form>
</div>